<Window x:Class="InkCanvasTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InkCanvasTest"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" Background="Transparent">
    <Grid>
        <local:CustomInkCanvas EditingMode="Ink"   Background="Transparent" x:Name="test" 
                  >
            <InkCanvas.DefaultDrawingAttributes >
                <DrawingAttributes Color="White" IsHighlighter="False" IgnorePressure="True" Width="10" Height="10"/>
            </InkCanvas.DefaultDrawingAttributes>
            <Line  Stroke="Black" X1="0" Y1="0" X2="100" Y2="100" StrokeThickness="1"/>
            <Button InkCanvas.Left="100" InkCanvas.Top="100" Content="test"/>
        </local:CustomInkCanvas>
    </Grid>
</Window>
